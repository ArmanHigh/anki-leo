{
	"manifest_version": 2,

	"name": "Anki-leo - LinguaLeo dictionary export",
	"short_name": "Anki-leo",
	"description": "Экспорт словаря из LinguaLeo в CSV формат, совместимый с Anki",
	"version": "2.1.0",
	"author": "Kosta Korenkov <7r0ggy@gmail.com>",

	"permissions": [
		"http://lingualeo.com/"
	],

	"icons": {
        "128": "leo-export-128.png"
    },


	"content_scripts": [
	    {
	      "matches": ["http://lingualeo.com/*/userdict", "https://lingualeo.com/*/userdict"],
	      "js": ["jquery.min.js", "FileSaver.js", "leo-export.js"],
	      "css": ["leo-export.css"]
	    }
	],


	"web_accessible_resources": ["leo-export-inject.js"]
}
